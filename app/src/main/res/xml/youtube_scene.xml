<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed">

        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="300"
            app:touchAnchorId="@+id/videoViewContainer"
            app:touchAnchorSide="top" />

        <!--<KeyFrameSet>-->
        <!--<KeyAttribute-->
        <!--app:framePosition="25"-->
        <!--android:alpha="1"-->
        <!--app:target="@id/videoView">-->
        <!--<CustomAttribute-->
        <!--app:attributeName="imageWidth"-->
        <!--app:customIntegerValue="2000" />-->
        <!--</KeyAttribute>-->

        <!--<KeyAttribute-->
        <!--app:framePosition="100"-->
        <!--android:alpha="0"-->
        <!--app:target="@id/videoView">-->
        <!--<CustomAttribute-->
        <!--app:attributeName="imageWidth"-->
        <!--app:customIntegerValue="50" />-->
        <!--</KeyAttribute>-->

        <!--</KeyFrameSet>-->
    </Transition>

    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/videoViewContainer"
            android:layout_height="250dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="cardElevation"
                app:customDimension="0dp" />
        </Constraint>

        <Constraint
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoViewContainer" />

        <Constraint
            android:id="@id/videoView"
            android:layout_height="250dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<Constraint-->
        <!--android:id="@id/videoView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginEnd="1dp" />-->

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@id/videoViewContainer"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="cardElevation"
                app:customDimension="5dp" />
        </Constraint>

        <Constraint
            android:id="@id/videoView"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="-1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/videoViewContainer" />

        <!--<Constraint-->
        <!--android:id="@id/videoView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginEnd="16dp" />-->

    </ConstraintSet>

</MotionScene>
